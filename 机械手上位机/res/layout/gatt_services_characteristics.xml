<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tvLinearLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFFFF"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:paddingTop="10dip"
        android:paddingBottom="10dip">

        <TextView
            android:id="@+id/servoTx0"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:paddingLeft="10dip"
            android:text="舵机0运动状态显示"/>

        <SeekBar
            android:id="@+id/ServoSkBar0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </SeekBar>
    </LinearLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:paddingTop="10dip"
        android:paddingBottom="10dip">

        <TextView
            android:id="@+id/servoTx1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:paddingLeft="10dip"
            android:text="舵机1运动状态显示"/>

        <SeekBar
            android:id="@+id/ServoSkBar1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </SeekBar>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:paddingTop="10dip"
        android:paddingBottom="10dip">

        <TextView
            android:id="@+id/servoTx2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:paddingLeft="10dip"
            android:text="舵机2运动状态显示"/>

        <SeekBar
            android:id="@+id/ServoSkBar2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </SeekBar>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:paddingTop="10dip"
        android:paddingBottom="10dip">

        <TextView
            android:id="@+id/servoTx3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:paddingLeft="10dip"
            android:text="舵机3运动状态显示"/>

        <SeekBar
            android:id="@+id/ServoSkBar3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </SeekBar>
    </LinearLayout>

</LinearLayout>